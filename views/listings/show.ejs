<% layout("/layouts/boilerplate") %>
  <div class="row mt-3">
    <div class="col-8 offset-3">

  <h3><%= listing.title %></h3>
  </div>
    <div class="card col-6 offset-3">
      <img src="<%=listing.image.url %>" alt="Image" class="card-img-top show-img">
      <div class="card-body">
        <%= listing.description %> 
        <br>
        &#8377; <%= listing.price %> 
        <br>
        <%= listing.location %> 
        <br>
        <%= listing.country %> 
        <br>
      </div>
    </div>
    <br>

    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary offset-3">Edit</a>
    <br><br>
    <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
      <button class="btn btn-danger del offset-5">Delete</button>
    </form>
  </div>
  <br>
 
  <div class="col-8 offset-3 mb-3">
    <hr>
    <h4>
      Leave a review
    </h4>
    <form action="/listings/<%= listing.id %>/reviews" method="post" class="mb-3">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range"  >
      </div>
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" > </textarea>
      </div>
      <button class="btn btn-outline-danger">Submit</button>
    </form>
  </div>
</div>
<br><br>


