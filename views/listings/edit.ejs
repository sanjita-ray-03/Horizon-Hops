<% layout("/layouts/boilerplate") %>
  <body>    
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
      <h2>Edit your Post</h2>
      <div class="mb-3">
        <label for="title" class="form-lable p-0">Title</label>
        <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" />
      </div>
      
      <div class="mb-3 d-flex flex-column">
        <label for="description" class="form-lable p-0">Description</label>
        <textarea rows="5" cols="25" name="listing[description]"> <%= listing.description %></textarea>
      </div>

      <div class="mb-3">
        <label for="image" class="form-lable p-0">Image URL</label>
        <input name="listing[image]" value="<%= listing.image.url%>" type="text" class="form-control" />
      </div>

      <div class="mb-3">
        <label for="price" class="form-lable p-0">Price</label>
        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" />
      </div>

      

      <div class="mb-3">
        <label for="country" class="form-lable p-0">Country</label>
        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" />
      </div>

      

      <div class="mb-3 ">
        <label for="location" class="form-lable p-0">Location</label>
        <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" />
      </div>

      

      <button class="btn btn-primary">Edit</button>
    </form>
    <br><br>
  </body>
